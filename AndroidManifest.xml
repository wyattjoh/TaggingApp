<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.ualberta.cs.taggingapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_action_labels"
        android:label="@string/app_name"
        android:logo="@drawable/ic_action_labels"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ca.ualberta.cs.taggingapp.views.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ca.ualberta.cs.taggingapp.views.PhotoGrid"
            android:label="@string/title_activity_photo_grid" >
        </activity>
        <activity
            android:name="ca.ualberta.cs.taggingapp.views.SignUp"
            android:label="@string/title_activity_sign_up" >
        </activity>
        <activity
            android:name="ca.ualberta.cs.taggingapp.views.SwipeSuper"
            android:label="@string/title_activity_swipe_super"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="ca.ualberta.cs.taggingapp.views.ViewFullPic"
            android:label="@string/title_activity_view_full_pic" >
        </activity>
        <activity
            android:name="ca.ualberta.cs.taggingapp.views.TagAndPhoto"
            android:label="@string/title_activity_tag_and_photo" >
        </activity>
        <activity
            android:name="ca.ualberta.cs.taggingapp.views.TagRefinedImages"
            android:label="@string/title_activity_tag_refined_images" >
        </activity>
        <activity
            android:name="ca.ualberta.cs.taggingapp.views.EditTag"
            android:label="@string/title_activity_edit_tag" >
        </activity>
        <activity
            android:name="ca.ualberta.cs.taggingapp.views.AddTag"
            android:label="@string/title_activity_add_tag" >
        </activity>
        <activity android:name="ca.ualberta.cs.taggingapp.views.CameraAndPhoto" >
        </activity>
        <activity
            android:name="ca.ualberta.cs.taggingapp.views.AddNameToTag"
            android:label="@string/title_activity_add_name_to_tag" >
        </activity>
    </application>

</manifest>
